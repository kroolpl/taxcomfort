---
import Layout from '../layouts/Layout.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';
import { Image } from 'astro:assets';
import officeImage from '../assets/images/office.jpg';
import office1Image from '../assets/images/of1.jpg';
import office2Image from '../assets/images/of2.jpg';
import office3Image from '../assets/images/of3.jpg';
import '../styles/animations.css';

const { lang } = Astro.params;
const isPolish = lang !== 'en';

const content = {
  title: 'Profesjonalne Usugi Ksigowe',
  description: 'TAX COMFORT - Tw贸j zaufany partner w sprawach ksigowych i podatkowych. Oferujemy kompleksowe usugi ksigowe dla firm i os贸b prywatnych.',
  hero: {
    heading: 'Tw贸j Zaufany Partner w Ksigowoci',
    subheading: 'Profesjonalne usugi ksigowe dostosowane do Twoich potrzeb',
    tagline: 'Ponad dekada dowiadczenia w prowadzeniu ksigowoci i doradztwie podatkowym',
    cta: {
      primary: 'Darmowa Konsultacja',
      secondary: 'Poznaj Nasze Usugi'
    }
  },
  features: {
    title: 'Dlaczego TAX COMFORT?',
    items: [
      {
        title: 'Dowiadczenie',
        description: 'Ponad 10 lat dowiadczenia w bran偶y ksigowej',
        icon: '',
        image: 'experience.jpg'
      },
      {
        title: 'Profesjonalizm',
        description: 'Zesp贸 wykwalifikowanych ekspert贸w',
        icon: '',
        image: 'professionalism.jpg'
      },
      {
        title: 'Indywidualne podejcie',
        description: 'Rozwizania dostosowane do potrzeb ka偶dego klienta',
        icon: '',
        image: 'individual-approach.jpg'
      }
    ]
  },
  stats: {
    title: 'Zaufali nam',
    items: [
      { number: '500+', label: 'Zadowolonych klient贸w' },
      { number: '10+', label: 'Lat dowiadczenia' },
      { number: '1000+', label: 'Rozliczonych deklaracji' }
    ]
  }
};
---

<Layout title={content.title} description={content.description} lang="pl">
  <!-- Hero Section -->
  <section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden pt-20 md:pt-24">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <Image 
        src={officeImage}
        alt="Modern office space"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary/90 to-accent opacity-90"></div>
      <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-10 animate-float"></div>
    </div>

    <!-- Content -->
    <div class="relative w-full">
      <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-12 lg:grid-cols-12">
        <div class="mr-auto place-self-center lg:col-span-7">
          <div class="max-w-2xl mb-4 space-y-6 stagger-animation">
            <h1 class="max-w-2xl mb-4 text-4xl font-display font-bold tracking-tight leading-none md:text-5xl xl:text-6xl text-white">
              {content.hero.heading}
            </h1>
            <p class="max-w-2xl mb-6 font-light text-white/90 lg:mb-8 md:text-lg lg:text-xl">
              {content.hero.subheading}
            </p>
            <p class="max-w-2xl mb-6 font-light text-white/80 md:text-lg">
              {content.hero.tagline}
            </p>
            <div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
              <a
                href={getRelativeLocaleUrl('pl', '/contact')}
                class="group relative inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-white rounded-lg bg-cta hover:bg-cta/90 focus:ring-4 focus:ring-primary-300 transition-all duration-300"
              >
                <span class="relative z-10">{content.hero.cta.primary}</span>
                <div class="absolute inset-0 bg-gradient-to-r from-cta to-accent opacity-0 group-hover:opacity-100 transition-opacity rounded-lg"></div>
                <svg class="w-5 h-5 ml-2 -mr-1 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </a>
              <a
                href={getRelativeLocaleUrl('pl', '/uslugi')}
                class="group inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white border border-white/20 rounded-lg hover:bg-white/10 focus:ring-4 focus:ring-gray-100 transition-all duration-300 backdrop-blur-sm"
              >
                {content.hero.cta.secondary}
                <svg class="w-5 h-5 ml-2 -mr-1 opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
          <div class="relative">
            <Image 
              src={officeImage}
              alt="Modern office space"
              class="w-full rounded-lg shadow-2xl"
              width={500}
              height={600}
            />
            <!-- Decorative elements -->
            <div class="absolute -bottom-10 -left-10 w-40 h-40 bg-accent/10 rounded-full blur-2xl"></div>
            <div class="absolute -top-10 -right-10 w-40 h-40 bg-primary/10 rounded-full blur-2xl"></div>

            <!-- Floating badge repositioned and restyled -->
            <div class="absolute -bottom-4 -left-6 animate-float-slow">
              <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-br from-accent/20 to-primary/20 backdrop-blur-sm rounded-full transform animate-pulse-subtle"></div>
                <div class="relative bg-white/95 backdrop-blur-sm rounded-2xl shadow-xl p-4 transform hover:scale-105 transition-transform border border-accent/10">
                  <div class="flex items-center space-x-3">
                    <div class="p-2 bg-gradient-to-br from-primary/10 to-accent/10 rounded-lg">
                      <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <div class="text-xl font-bold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">10+</div>
                      <div class="text-xs text-gray-600 font-medium">Lat dowiadczenia</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 animate-bounce">
      <div class="w-8 h-12 rounded-full border-2 border-white/30 flex items-start justify-center p-2">
        <div class="w-1 h-3 bg-white/50 rounded-full animate-scroll"></div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 relative overflow-hidden bg-gradient-to-br from-gray-50 via-white to-gray-50">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
    
    <div class="container mx-auto px-4 relative">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-center mb-16 text-primary">
        {content.features.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {content.features.items.map((feature, index) => (
          <div class="group bg-white/80 backdrop-blur-sm p-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="mb-6 relative overflow-hidden rounded-lg">
              <Image 
                src={[office3Image, office1Image, office2Image][index]}
                alt={feature.title}
                class="w-full h-48 object-cover transform transition-transform group-hover:scale-105 duration-500"
                width={400}
                height={300}
              />
              <div class="absolute -bottom-4 -right-4 w-16 h-16 bg-white rounded-full shadow-lg flex items-center justify-center text-3xl transform group-hover:scale-110 transition-transform">
                {feature.icon}
              </div>
            </div>
            <h3 class="text-xl font-display font-semibold mb-4 text-primary">{feature.title}</h3>
            <p class="text-secondary leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="bg-gradient-to-br from-primary via-primary/95 to-accent text-white relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-5 animate-float"></div>
    <div class="container mx-auto px-4 py-20 relative">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-center mb-16">
        {content.stats.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        {content.stats.items.map(stat => (
          <div class="group relative">
            <div class="absolute inset-0 bg-white/10 backdrop-blur-sm rounded-2xl transform transition-transform group-hover:scale-105 duration-300"></div>
            <div class="relative p-8 rounded-2xl border border-white/10 hover:border-white/20 transition-colors">
              <div class="text-5xl font-bold mb-4 bg-gradient-to-r from-white to-white/80 text-transparent bg-clip-text group-hover:scale-110 transition-transform">
                {stat.number}
              </div>
              <div class="text-lg text-white/90 font-medium">{stat.label}</div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Enhanced Decorative Elements -->
      <div class="absolute top-1/2 left-0 w-96 h-96 bg-white/5 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-[40rem] h-[40rem] bg-accent/20 rounded-full blur-3xl translate-x-1/4 translate-y-1/4"></div>
      <div class="absolute top-0 right-1/4 w-64 h-64 bg-primary/30 rounded-full blur-3xl"></div>
    </div>
  </section>
</Layout>

<style>
  @keyframes scroll {
    0% { transform: translateY(0); opacity: 1; }
    100% { transform: translateY(100%); opacity: 0; }
  }

  .animate-scroll {
    animation: scroll 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 0.6; }
  }

  .animate-pulse {
    animation: pulse 4s ease-in-out infinite;
  }

  .delay-1000 {
    animation-delay: 1s;
  }

  @keyframes float-slow {
    0%, 100% { transform: translate(-50%, -50%) translateY(0) rotate(1deg); }
    50% { transform: translate(-50%, -50%) translateY(-10px) rotate(-1deg); }
  }

  @keyframes pulse-subtle {
    0%, 100% { opacity: 0.5; transform: scale(1.1); }
    50% { opacity: 0.3; transform: scale(1); }
  }

  .animate-float-slow {
    animation: float-slow 6s ease-in-out infinite;
  }

  .animate-pulse-subtle {
    animation: pulse-subtle 4s ease-in-out infinite;
  }
</style>