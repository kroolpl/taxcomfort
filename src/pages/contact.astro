---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import officeImage from '../assets/images/office.jpg';

const content = {
  title: 'Kontakt',
  description: 'Skontaktuj się z TAX COMFORT - Twoim zaufanym partnerem w sprawach księgowych i podatkowych.',
  hero: {
    title: 'Skontaktuj się z nami',
    subtitle: 'Jesteśmy tutaj, aby pomóc w rozwoju Twojej firmy'
  },
  contact: {
    title: 'Dane kontaktowe',
    address: {
      street: 'ul. Example Street 123',
      city: 'London',
      postcode: 'E1 1AA'
    },
    phone: '+44 7305049542',
    email: 'contact@taxcomfort.co.uk',
    hours: 'Pon - Pt: 9:00 - 17:00'
  },
  form: {
    name: 'Imię i nazwisko',
    email: 'Adres email',
    phone: 'Numer telefonu',
    subject: 'Temat',
    message: 'Wiadomość',
    submit: 'Wyślij wiadomość',
    placeholder: {
      name: 'Jan Kowalski',
      email: 'jan@example.com',
      phone: '+48 123 456 789',
      subject: 'Temat wiadomości',
      message: 'Treść wiadomości...'
    }
  }
};
---

<Layout title={content.title} description={content.description} lang="pl">
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden pt-20 md:pt-24">
    <div class="absolute inset-0">
      <Image 
        src={officeImage}
        alt="Modern office space"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary/90 to-accent opacity-90"></div>
      <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-10 animate-float"></div>
    </div>
    
    <div class="relative container mx-auto px-4 py-20 text-center text-white">
      <div class="stagger-animation">
        <h1 class="font-display text-4xl md:text-6xl font-bold mb-6 tracking-tight animate-fade-up">
          {content.hero.title}
        </h1>
        <p class="text-xl md:text-2xl mb-4 max-w-2xl mx-auto font-medium text-white/90 animate-fade-up">
          {content.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 relative overflow-hidden bg-gradient-to-br from-gray-50 via-white to-gray-50">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
    
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form - Now on the left -->
        <div class="bg-white/80 backdrop-blur-sm p-8 rounded-xl shadow-lg border-t-4 border-primary">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="group">
                <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.name}</label>
                <input
                  type="text"
                  placeholder={content.form.placeholder.name}
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 hover:border-primary/50"
                />
              </div>
              <div class="group">
                <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.email}</label>
                <input
                  type="email"
                  placeholder={content.form.placeholder.email}
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 hover:border-primary/50"
                />
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="group">
                <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.phone}</label>
                <input
                  type="tel"
                  placeholder={content.form.placeholder.phone}
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 hover:border-primary/50"
                />
              </div>
              <div class="group">
                <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.subject}</label>
                <input
                  type="text"
                  placeholder={content.form.placeholder.subject}
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 hover:border-primary/50"
                />
              </div>
            </div>
            <div class="group">
              <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.message}</label>
              <textarea
                placeholder={content.form.placeholder.message}
                rows="6"
                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 hover:border-primary/50"
              ></textarea>
            </div>
            <button 
              type="submit" 
              class="w-full sm:w-auto px-8 py-3 bg-primary text-white rounded-lg transition-all duration-300 hover:-translate-y-1 flex items-center justify-center space-x-2 group animate-breathe"
            >
              <span>{content.form.submit}</span>
              <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
              </svg>
            </button>
          </form>
        </div>

        <!-- Contact Info and Map - Now on the right -->
        <div class="space-y-8">
          <div class="bg-white/80 backdrop-blur-sm p-8 rounded-xl shadow-lg border-t-4 border-accent">
            <h2 class="text-2xl font-display font-bold text-primary mb-6">{content.contact.title}</h2>
            <div class="space-y-6">
              <div class="flex items-start space-x-4 group">
                <div class="p-2 bg-gradient-to-br from-primary/10 to-accent/10 rounded-lg mt-1 group-hover:from-primary/20 group-hover:to-accent/20 transition-colors">
                  <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div class="group-hover:translate-x-1 transition-transform">
                  <h3 class="font-medium text-primary">Adres</h3>
                  <p class="text-secondary">{content.contact.address.street}</p>
                  <p class="text-secondary">{content.contact.address.city}</p>
                  <p class="text-secondary">{content.contact.address.postcode}</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="p-2 bg-primary/10 rounded-lg mt-1">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-primary">Telefon</h3>
                  <p class="text-secondary">{content.contact.phone}</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="p-2 bg-primary/10 rounded-lg mt-1">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-primary">Email</h3>
                  <p class="text-secondary">{content.contact.email}</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="p-2 bg-primary/10 rounded-lg mt-1">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-primary">Godziny otwarcia</h3>
                  <p class="text-secondary">{content.contact.hours}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Google Maps with accent border -->
          <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg overflow-hidden h-[300px] border-t-4 border-primary/50">
            <iframe
              src="https://www.google.com/maps/embed?pb=YOUR_GOOGLE_MAPS_EMBED_URL"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .stagger-animation > * {
    opacity: 0;
    animation: fade-up 0.6s ease-out forwards;
  }

  .stagger-animation > *:nth-child(1) { animation-delay: 0.1s; }
  .stagger-animation > *:nth-child(2) { animation-delay: 0.2s; }
  .stagger-animation > *:nth-child(3) { animation-delay: 0.3s; }

  @keyframes breathe {
    0%, 100% {
      transform: scale(1);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
    50% {
      transform: scale(1.02);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
  }

  .animate-breathe {
    animation: breathe 3s ease-in-out infinite;
  }

  .animate-breathe:hover {
    animation: none;
  }
</style>