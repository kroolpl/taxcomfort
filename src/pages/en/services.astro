---
import Layout from '../../layouts/Layout.astro';

const content = {
  title: 'Our Services',
  description: 'Comprehensive accounting services and tax consulting for your business.',
  hero: {
    title: 'Professional Accounting Services',
    subtitle: 'We focus on your success'
  },
  services: [
    {
      title: 'Business Accounting',
      description: 'Full accounting service, bookkeeping, social security and tax settlements.',
      icon: 'ðŸ“Š'
    },
    {
      title: 'Tax Advisory',
      description: 'Professional advice on tax optimization and financial planning.',
      icon: 'ðŸ’¡'
    },
    {
      title: 'HR and Payroll',
      description: 'Comprehensive HR and payroll services, salary and benefits settlement.',
      icon: 'ðŸ‘¥'
    },
    {
      title: 'Financial Reporting',
      description: 'Preparation of financial reports, analyses, and management reports.',
      icon: 'ðŸ“ˆ'
    }
  ],
  features: {
    title: 'Why Choose Us?',
    items: [
      {
        title: 'Experience',
        description: 'Over 10 years in accounting'
      },
      {
        title: 'Individual Approach',
        description: 'Tailored solutions for each client'
      },
      {
        title: 'Security',
        description: 'Guaranteed confidentiality and professionalism'
      }
    ]
  }
};
---

<Layout title={content.title} description={content.description} lang="en">
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center bg-gradient-to-br from-primary via-primary/90 to-accent text-white overflow-hidden">
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-10 animate-float"></div>
    
    <div class="relative container mx-auto px-4 py-20 text-center stagger-animation">
      <h1 class="font-display text-4xl md:text-6xl font-bold mb-6 tracking-tight">
        {content.hero.title}
      </h1>
      <p class="text-xl md:text-2xl mb-4 max-w-2xl mx-auto font-medium text-white/90">
        {content.hero.subtitle}
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 stagger-animation">
        {content.services.map(service => (
          <div class="group p-8 rounded-2xl bg-gradient-to-br from-white to-gray-50 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="text-4xl mb-4 transform transition-transform group-hover:scale-110">{service.icon}</div>
            <h3 class="text-2xl font-display font-bold mb-4 text-primary">{service.title}</h3>
            <p class="text-secondary leading-relaxed">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-center mb-12 text-primary">
        {content.features.title}
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 stagger-animation">
        {content.features.items.map(feature => (
          <div class="bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
            <h3 class="text-xl font-display font-semibold mb-4 text-primary">{feature.title}</h3>
            <p class="text-secondary leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout> 