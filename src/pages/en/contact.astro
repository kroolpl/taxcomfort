---
import Layout from '../../layouts/Layout.astro';

const content = {
  title: 'Contact',
  description: 'Contact TAX COMFORT - Your trusted partner in accounting and tax matters.',
  heading: 'Get in touch',
  subheading: 'We\'re here to help you with your accounting needs',
  form: {
    name: 'Full name',
    email: 'Email address',
    phone: 'Phone number',
    subject: 'Subject',
    message: 'Message',
    submit: 'Send message',
    placeholder: {
      name: 'John Doe',
      email: 'john@example.com',
      phone: '+48 123 456 789',
      subject: 'Your message subject',
      message: 'Your message content...'
    }
  }
};
---

<Layout title={content.title} description={content.description} lang="en">
  <section class="relative min-h-[40vh] flex items-center justify-center bg-gradient-to-br from-primary via-primary/90 to-accent text-white overflow-hidden">
    <div class="absolute inset-0 bg-black/40"></div>
    <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-10 animate-float"></div>
    
    <div class="relative container mx-auto px-4 py-20 text-center">
      <h1 class="font-display text-4xl md:text-6xl font-bold mb-6 tracking-tight">
        {content.heading}
      </h1>
      <p class="text-xl md:text-2xl mb-4 max-w-2xl mx-auto font-medium text-white/90">
        {content.subheading}
      </p>
    </div>
  </section>

  <section class="py-20">
    <div class="container mx-auto px-4 max-w-4xl">
      <form class="bg-white p-8 rounded-xl shadow-lg">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.name}</label>
            <input
              type="text"
              placeholder={content.form.placeholder.name}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.email}</label>
            <input
              type="email"
              placeholder={content.form.placeholder.email}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.phone}</label>
            <input
              type="tel"
              placeholder={content.form.placeholder.phone}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.subject}</label>
            <input
              type="text"
              placeholder={content.form.placeholder.subject}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
            />
          </div>
          <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.message}</label>
            <textarea
              placeholder={content.form.placeholder.message}
              rows="6"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
            ></textarea>
          </div>
        </div>
        <div class="mt-6">
          <button type="submit" class="w-full sm:w-auto px-8 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">
            {content.form.submit}
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout> 