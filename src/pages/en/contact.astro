---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import officeImage from '../../assets/images/office.jpg';

const content = {
  title: 'Contact',
  description: 'Contact TAX COMFORT - Your trusted partner in accounting and tax matters.',
  hero: {
    title: 'Get in touch',
    subtitle: 'We\'re here to help you with your accounting needs'
  },
  form: {
    name: 'Full name',
    email: 'Email address',
    phone: 'Phone number',
    subject: 'Subject',
    message: 'Message',
    submit: 'Send message',
    placeholder: {
      name: 'John Doe',
      email: 'john@example.com',
      phone: '+48 123 456 789',
      subject: 'Your message subject',
      message: 'Your message content...'
    }
  }
};
---

<Layout title={content.title} description={content.description} lang="en">
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden pt-20 md:pt-24">
    <div class="absolute inset-0">
      <Image 
        src={officeImage}
        alt="Modern office space"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-primary via-primary/90 to-accent opacity-90"></div>
      <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-10 animate-float"></div>
    </div>
    
    <div class="relative container mx-auto px-4 py-20 text-center text-white">
      <div class="stagger-animation">
        <h1 class="font-display text-4xl md:text-6xl font-bold mb-6 tracking-tight animate-fade-up">
          {content.hero.title}
        </h1>
        <p class="text-xl md:text-2xl mb-4 max-w-2xl mx-auto font-medium text-white/90 animate-fade-up">
          {content.hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 relative overflow-hidden bg-gradient-to-br from-gray-50 via-white to-gray-50">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
    
    <div class="container mx-auto px-4 max-w-4xl relative">
      <form class="bg-white/80 backdrop-blur-sm p-8 rounded-xl shadow-lg">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.name}</label>
            <input
              type="text"
              placeholder={content.form.placeholder.name}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300"
            />
          </div>
          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.email}</label>
            <input
              type="email"
              placeholder={content.form.placeholder.email}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300"
            />
          </div>
          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.phone}</label>
            <input
              type="tel"
              placeholder={content.form.placeholder.phone}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300"
            />
          </div>
          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.subject}</label>
            <input
              type="text"
              placeholder={content.form.placeholder.subject}
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300"
            />
          </div>
          <div class="md:col-span-2 group">
            <label class="block text-sm font-medium text-gray-700 mb-2">{content.form.message}</label>
            <textarea
              placeholder={content.form.placeholder.message}
              rows="6"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300"
            ></textarea>
          </div>
        </div>
        <div class="mt-6">
          <button 
            type="submit" 
            class="inline-flex items-center px-8 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-all duration-300 hover:-translate-y-1"
          >
            {content.form.submit}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .stagger-animation > * {
    opacity: 0;
    animation: fade-up 0.6s ease-out forwards;
  }

  .stagger-animation > *:nth-child(1) { animation-delay: 0.1s; }
  .stagger-animation > *:nth-child(2) { animation-delay: 0.2s; }
  .stagger-animation > *:nth-child(3) { animation-delay: 0.3s; }
</style> 